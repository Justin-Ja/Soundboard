<Window x:Class="Soundboard.Views.GridSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter="clr-namespace:Soundboard.Common.Converters;assembly=Soundboard.Common"
        xmlns:local="clr-namespace:Soundboard.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <converter:NullToBoolean x:Key="NullToBoolean"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select a button grid to load:"
                   FontSize="14"
                   FontWeight="SemiBold"/>

        <ListBox Grid.Row="2"
                 x:Name="GridListBox"
                 ItemsSource="{Binding AvailableGrids}"
                 SelectedItem="{Binding SelectedGrid}"
                 DisplayMemberPath="Name"
                 FontSize="14"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Margin" Value="2"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Load" 
                    IsDefault="True"
                    Click="LoadButton_Click"
                    IsEnabled="{Binding ElementName=GridListBox, Path=SelectedItem, Converter={StaticResource NullToBoolean}}"
                    Width="80" 
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Width="80" 
                    Height="35"/>
        </StackPanel>
    </Grid>
</Window>
