<UserControl x:Class="Soundboard.Views.ButtonGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Soundboard.Views"
             xmlns:converter="clr-namespace:Soundboard.Common.Converters;assembly=Soundboard.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:InverseBooleanToVisibility x:Key="InverseBooleanToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding SoundButtons}" 
                      x:Name="SoundButtonsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding GridColumns}" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding ButtonBrush}"
                                BorderBrush="{Binding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="5"
                                Margin="5"
                                MinHeight="60"
                                MinWidth="120">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Main button -->
                                <Button Grid.Row="0"
                                        Content="{Binding DisplayText}"
                                        Command="{Binding Command}"
                                        FontSize="14"
                                        Padding="10"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"/>
                                <TextBlock Grid.Row="1" 
           Text="{Binding KeyBindingDisplay}"
           FontSize="10"
           Foreground="Gray"
           HorizontalAlignment="Center"
           Margin="2"
           Visibility="{Binding IsAddButton, Converter={StaticResource InverseBooleanToVisibility}}"
           Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding Gesture="LeftClick"
                      Command="{Binding SetKeyBindingCommand}" />
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
